<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.bence.jatek.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Fájl">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleNewGame" text="Játék újrakezdése" />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Kilépés" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Eredmények">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleMilestones" text="Mérföldkövek" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Névjegy">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleNevjegy" text="Névjegy" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
